{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}- les missions{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Les missions</h1>
        {% if not mission.items is same as ([]) %}

		<a href="{{ path('mission.new') }}" class="btn btn-primary">Créer une mission</a>

		{% for message in app.flashes('success') %}
        <div class="alert alert-success mt-3">
        {{ message }}</div>
    	{% endfor %}
        
        <div class="count mt-4">
            <h4>Il y a {{ mission.getTotalItemCount }} missions au total</h4>
        </div>



		<table class="table table-active mt-4">
			<thead>
				<tr>
                    <th scope="col">Numéro</th>
					<th scope="col">Nom</th>
                    <th scope="col">Nom de code</th>
                    <th scope="col">Pays</th>
					<th scope="col">Agent</th>
                    <th scope="col">Status</th>
					<th scope="col">Edition</th>
					<th scope="col">Suppression</th>
				</tr>
			</thead>
			<tbody>
				{% for missions in mission %}
					<tr class="table-active mt-4">
						<th scope="row">{{ missions.id }}</th>
						<td>{{ missions.title }}</td>
                        <td>{{ missions.codeName }}</td>
                        <td>{{ missions.pays }}</td>

						<td>{% for agent in missions.agent %}
								<span class="badge bg-primary">{{ agent.name }}</span>
							{% endfor %}</td>
                        
                        <td>{{ missions.statut }}</td>
						<td>
							<a href="{{ path('mission.edit', { id: missions.id }) }}" class="btn btn-info">Modifier</a>
						</td>
						<td>
							<a href="{{ path('mission.delete', { id: missions.id }) }}" class="btn btn-danger">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(mission) }}
		</div>
        {% else %}
        <h4>Aucune mission n'a été trouvé</h4>
        <a href="{{ path('mission.new') }}" class="btn btn-primary">Créer une mission</a>
        {% endif %}
	</div>
{% endblock %}