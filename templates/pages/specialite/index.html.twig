{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}- les spécialités{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Les spécialités</h1>
        {% if not specialite.items is same as ([]) %}

		<a href="{{ path('specialite.new') }}" class="btn btn-primary">Créer une spécialité</a>

		{% for message in app.flashes('success') %}
        <div class="alert alert-success mt-3">
        {{ message }}</div>
    	{% endfor %}
        
        <div class="count mt-4">
            <h4>Il y a {{ specialite.getTotalItemCount }} spécialités au total</h4>
        </div>

		<table class="table table-active mt-4">
			<thead>
				<tr>
					<th scope="col">Numéro</th>
					<th scope="col">Nom</th>
					<th scope="col">Edition</th>
					<th scope="col">Suppression</th>
				</tr>
			</thead>
			<tbody>
				{% for specialite in specialite %}
					<tr class="table-active mt-4">
						<th scope="row">{{ specialite.id }}</th>
						<td>{{ specialite.name }}</td>
						<td>
							<a href="{{ path('specialite.edit', { id: specialite.id }) }}" class="btn btn-info">Modifier</a>
						</td>
						<td>
							<a href="{{ path('specialite.delete', { id: specialite.id }) }}" class="btn btn-danger">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(specialite) }}
		</div>
        {% else %}
        <h4>Aucune spécialités n'a été trouvé</h4>
        <a href="{{ path('specialite.new') }}" class="btn btn-primary">Créer une spécialité</a>
        {% endif %}
	</div>
{% endblock %}
